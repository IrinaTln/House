@model MyHermitage.Models.House.HouseEditViewModel

@if (Model.Id.HasValue)
{
    <h1>Update</h1>
}
else
{
    <h1>Create</h1>
}

<div>
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />

        <div class="form-group row">
            <label asp-for="ClientName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ClientName" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Architecture" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Architecture" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="TypeOfBuilding" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="TypeOfBuilding" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Size" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Size" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="NumberOfStoreys" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="NumberOfStoreys" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="BildingMaterial" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BildingMaterial" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DateOfBildingPermition" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DateOfBildingPermition" class="form-control" />
            </div>
        </div>

        <hr />

        @if (Model.Id.HasValue)
        {
            <input asp-action="update" asp-controller="house" type="submit" class="btn btn-primary" value="Update" />
        }
        else
        {
            <input asp-action="create" asp-controller="house" type="submit" class="btn btn-primary" value="Create" />
        }

        <a asp-action="Index" class="btn btn-primary">Index</a>

    </form>
</div>
